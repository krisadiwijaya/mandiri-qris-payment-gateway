# Mandiri QRIS API Configuration

# Environment: sandbox or production
MANDIRI_ENV=sandbox

# API Credentials (get from Mandiri Developer Portal)
MANDIRI_CLIENT_ID=your_client_id_here
MANDIRI_CLIENT_SECRET=your_client_secret_here

# Merchant Information
MANDIRI_MERCHANT_NMID=YOUR_NMID_HERE
MANDIRI_MERCHANT_NAME=YOUR MERCHANT NAME
MANDIRI_MERCHANT_CITY=JAKARTA

# QR Code Settings
QRIS_EXPIRY_MINUTES=30

# Sandbox URLs (default)
MANDIRI_BASE_URL=https://sandbox.bankmandiri.co.id
MANDIRI_AUTH_URL=/openapi/auth/v2.0/access-token/b2b
MANDIRI_QRIS_CREATE_URL=/openapi/qris/v2.0/qr-code
MANDIRI_QRIS_STATUS_URL=/openapi/qris/v2.0/qr-code/status

# Production URLs (uncomment when going live)
# MANDIRI_ENV=production
# MANDIRI_BASE_URL=https://api.bankmandiri.co.id
# MANDIRI_CLIENT_ID=your_production_client_id
# MANDIRI_CLIENT_SECRET=your_production_client_secret
# MANDIRI_MERCHANT_NMID=YOUR_PROD_NMID

# Webhook Settings (optional)
WEBHOOK_SECRET=your_webhook_secret_here
WEBHOOK_URL=https://yourdomain.com/webhook.php

# Logging
LOG_ENABLED=true
LOG_FILE=mandiri-qris.log
