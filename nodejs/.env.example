# Mandiri QRIS Configuration

# Environment: sandbox or production
MANDIRI_ENV=sandbox

# API Credentials (get from Mandiri Developer Portal)
MANDIRI_CLIENT_ID=your_client_id_here
MANDIRI_CLIENT_SECRET=your_client_secret_here

# Merchant Information
MANDIRI_MERCHANT_NMID=YOUR_NMID_HERE
MANDIRI_MERCHANT_NAME=YOUR MERCHANT NAME
MANDIRI_MERCHANT_CITY=JAKARTA

# QR Code Settings
QRIS_EXPIRY_MINUTES=30

# Server Configuration
PORT=3000
NODE_ENV=development

# Database Configuration (optional)
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=
DB_NAME=mandiri_qris

# MongoDB (alternative)
MONGODB_URI=mongodb://localhost:27017/mandiri_qris

# PostgreSQL (alternative)
DATABASE_URL=postgresql://user:password@localhost:5432/mandiri_qris

# Production Configuration (uncomment when going live)
# MANDIRI_ENV=production
# MANDIRI_CLIENT_ID=prod_your_client_id
# MANDIRI_CLIENT_SECRET=prod_your_client_secret
# MANDIRI_MERCHANT_NMID=PROD_NMID
# NODE_ENV=production
